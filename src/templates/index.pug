extends layout.pug

block content
  h2
    img.chat-bubble(src='/static/images/chat-bubble.png')
    span Users

  ul
    each user in users
      li= JSON.stringify(user)

  h3 Form

  #survey-form
    input(v-model="title")

    ul.questions
      li(v-for="question in questions")
        | Question
        input(v-model="question.text")
        button(type="button" @click="remove(questions, question)") ➖

        select(v-model="question.type")
          option(v-for="type in questionTypes") {{type}}

        .multi-options(v-if="question.type === 'multi'")
          ul.choices
            li(v-for="choice in question.choices")
              | choice
              input(v-model="choice.text")
              button(type="button" @click="remove(question.choices, choice)") ➖
          button(type="button" @click="addChoice(question)") ➕ choice

    button(type="button" @click="addQuestion") ➕ question
